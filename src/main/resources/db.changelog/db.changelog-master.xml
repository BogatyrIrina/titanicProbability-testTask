<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="create-pass-table" author="Irina-Bogatyr">
        <createTable tableName="passengers">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="survived" type="boolean" />
            <column name="passenger_class" type="varchar(255)" />
            <column name="name" type="varchar(255)" />
            <column name="sex" type="varchar(255)" />
            <column name="age" type="integer" />
            <column name="sibling_spouses_aboard" type="integer" />
            <column name="parents_children_aboard" type="integer" />
            <column name="fare" type="decimal" />
        </createTable>
    </changeSet>

</databaseChangeLog>